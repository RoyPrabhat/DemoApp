<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DemoApp.ThemeOverlay.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/purple</item>
    </style>

    <style name="DemoApp.TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="DemoApp.TextAppearance.Heading">
        <item name="android:textColor">@color/black_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DemoApp.TextAppearance.Heading.Medium">
        <item name="android:textSize">@dimen/dimen_28sp</item>
        <item name="lineHeight">@dimen/dimen_36sp</item>
    </style>

    <style name="DemoApp.TextAppearance.Heading.Small">
        <item name="android:textSize">@dimen/dimen_22sp</item>
        <item name="lineHeight">@dimen/dimen_28sp</item>
    </style>

    <style name="DemoApp.TextAppearance.Heading.XS">
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="lineHeight">@dimen/dimen_24sp</item>
    </style>
    <style name="DemoApp.TextAppearance.Heading.XSmall">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="lineHeight">@dimen/dimen_20sp</item>
    </style>

    <style name="DemoApp.TextAppearance.Body">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DemoApp.TextAppearance.Body.Small">
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="lineHeight">@dimen/dimen_20sp</item>
    </style>

    <style name="DemoApp.TextAppearance.Body.XSmall">
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="lineHeight">@dimen/dimen_18sp</item>
    </style>

    <style name="DemoApp.TextAppearance.Body.XSmall.Inverted">
        <item name="android:textColor">@color/white_E6</item>
    </style>


</resources>
