<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:layout_marginEnd="@dimen/dimen_16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_144dp"
        android:layout_height="@dimen/dimen_212dp"
        android:background="@drawable/bg_placeholder"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_toEndOf="@id/image"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/DemoApp.TextAppearance.Heading.XSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:text="The Godfather I" />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_toEndOf="@id/image"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/DemoApp.TextAppearance.Body.XSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Action \u00b7 Romantic" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/background_rating"
        android:drawablePadding="@dimen/dimen_6dp"
        android:padding="@dimen/dimen_6dp"
        android:textAppearance="@style/DemoApp.TextAppearance.Body.XSmall.Inverted"
        app:drawableStartCompat="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/release_date"
        tools:text="8.4" />
</androidx.constraintlayout.widget.ConstraintLayout>
